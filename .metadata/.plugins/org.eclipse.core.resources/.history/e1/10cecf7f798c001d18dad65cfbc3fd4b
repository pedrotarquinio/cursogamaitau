
public class BemVindo {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		String nome;
		int n1;
		int n2;
		int media;
		
		nome = "Pedro Tarquinio";
		n1 = 8;
		n2 = 6;
		media = (n1+n2)/2;
		System.out.println(
				"Nome do aluno: " + nome +
				"\nPrimeira Nota: " + n1 +
				"\nSegunda Nota: " + n2 +
				"\nMedia Final: " + media 
				);
	}

}
